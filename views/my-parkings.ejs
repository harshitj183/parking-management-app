</div>

<%- contentFor('scripts') %>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Tab switching functionality
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabButtons.forEach(button => {
            button.addEventListener('click', function() {
                const tabName = this.dataset.tab;
                
                // Update tab buttons
                tabButtons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                
                // Update tab contents
                tabContents.forEach(content => {
                    content.style.display = 'none';
                    if (content.id === tabName + '-content') {
                        content.style.display = 'block';
                    }
                });
            });
        });
        
        // Cancel booking button
        document.getElementById('cancel-booking-btn').addEventListener('click', function() {
            if (confirm('Are you sure you want to cancel this booking?')) {
                // Would normally use AJAX to call a cancel endpoint
                alert('Booking canceled successfully.');
                
                // Switch to canceled tab to show the result
                document.querySelector('[data-tab="canceled"]').click();
            }
        });
    });
</script>